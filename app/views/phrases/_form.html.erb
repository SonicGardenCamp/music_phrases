<%= form_with(model: phrase) do |form| %>
  <% if phrase.errors.any? %>
    <div style="color: red">
      <h2><%= phrase.errors.full_messages.map { |msg| msg == "Play url is not a valid YouTube ID" ? "プレイURLが正しいYouTubeのIDではありません" : msg }.join('、') %>のため、フレーズを保存できませんでした。</h2>
    </div>
  <% end %>
  
  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_field :content %>
  </div>

  <div>
    <%= form.label :music_title, style: "display: block" %>
    <%= form.text_field :music_title %>
  </div>

  <div>
    <%= form.label :comment, style: "display: block" %>
    <%= form.text_area :comment %>
  </div>

  <div>
    <%= form.label :author_name, style: "display: block" %>
    <%= form.text_field :author_name %>
  </div>

  <div>
    <%= form.label :artist_name, style: "display: block" %>
    <%= form.text_field :artist_name %>
  </div>

  <div>
    <%= form.label :play_url, style: "display: block" %>
    <%= form.text_field :play_url %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
