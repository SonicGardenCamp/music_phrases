<p style="color: green"><%= notice %></p>


<%= image_tag 'music_phrases.png', class: 'fullscreen-image' %>




<!-- Bootstrapのグリッドシステム -->
<div class="container">
  <div class="row">
  <% @phrases.each_with_index do |phrase, index| %>
    <!-- フレーズのカード -->
    <div class="col-md-4">
      <%= link_to phrase do %>
        <div class="card mb-4 clickable-card" id="phrase-<%= phrase.id %>">
          <div class="card-body">
            <h5 class="card-title"><%= phrase.content %></h5>
          </div>
        </div>
      <% end %>
    </div>
    <!-- 3つのアイテムごとの行の終わりと新しい行の開始 -->
    <% if (index + 1) % 3 == 0 %>
      </div><div class="row">
    <% end %>
  <% end %>
  
  
  </div>
</div>

<%= paginate @phrases, theme: 'bootstrap-5' %>
